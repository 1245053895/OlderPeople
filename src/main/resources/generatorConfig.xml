		<table tableName="pay"></table>

		<table tableName="product"></table>
		<table tableName="productslog"></table>
		<table tableName="producttype"></table>
		<table tableName="proxy"></table>

		<table tableName="secondview"></table>
		<table tableName="shopcar"></table>
		<table tableName="stock"></table>
		<table tableName="transport"></table>

		<table tableName="user"></table>
		<table tableName="userlog"></table>
		<table tableName="systemset"></table>
